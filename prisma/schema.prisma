generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  firstName    String
  lastName     String
  certificates Certificate[]
}

model Certificate {
  id          Int      @id @default(autoincrement())
  code        String   @unique
  courseTitle String
  url         String?
  issuedAt    DateTime @default(now())
  userId      Int

  user User @relation(fields: [userId], references: [id])
}
